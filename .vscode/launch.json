{
  "version": "0.0.0",
  "compounds": [
    {
      "name": "Server/Client",
      "configurations": [
        "Server",
        "Client"
      ]
    }
  ],
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Server",
      "program": "${workspaceFolder}/src/switch-board-server/app.js",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Client",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm start",
      "url": "http://localhost:4200/switch-board/",
      "webRoot": "${workspaceFolder}/src/switch-board",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*",
        "/./*": "${webRoot}/*",
        "/src/*": "${webRoot}/*",
        "/*": "*",
        "/./~/*": "${webRoot}/node_modules/*"
      }
    },
    {
      "name": "Client test",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:9876/debug.html",
      "webRoot": "${workspaceFolder}/src/switch-board",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*",
        "/./*": "${webRoot}/*",
        "/src/*": "${webRoot}/*",
        "/*": "*",
        "/./~/*": "${webRoot}/node_modules/*"
      }
    },
    {
      "name": "Client e2e",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/switch-board/node_modules/protractor/bin/protractor",
      "protocol": "inspector",
      "args": [
        "${workspaceFolder}/src/switch-board/e2e/protractor.conf.js"
      ]
    }
  ]
}